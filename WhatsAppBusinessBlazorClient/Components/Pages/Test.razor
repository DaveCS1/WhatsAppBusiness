@page "/test"
@inject ApiService ApiService

<PageTitle>API Test</PageTitle>

<h3>API Service Test</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">API Connection Test</h5>
        
        @if (testResult != null)
        {
            <div class="alert @(testResult.Success ? "alert-success" : "alert-danger")">
                <strong>@(testResult.Success ? "âœ… Success" : "âŒ Failed"):</strong> @testResult.Message
            </div>
        }
        
        <button class="btn btn-primary" @onclick="TestConnection" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            Test API Connection
        </button>
        
        <button class="btn btn-secondary ms-2" @onclick="SimpleTest">
            Simple Test
        </button>
        
        @if (baseAddress != null)
        {
            <div class="mt-3">
                <strong>Status:</strong> @baseAddress
            </div>
        }
    </div>
</div>

@code {
    private TestResult? testResult;
    private bool isLoading = false;
    private string? baseAddress;

    protected override void OnInitialized()
    {
        try
        {
            baseAddress = "ApiService injected successfully";
            Console.WriteLine("âœ… Test page: ApiService injection successful");
        }
        catch (Exception ex)
        {
            baseAddress = $"Error: {ex.Message}";
            Console.WriteLine($"âŒ Test page: ApiService injection failed: {ex.Message}");
        }
    }

    private async Task TestConnection()
    {
        Console.WriteLine("ğŸ”¥ TestConnection method called!");
        System.Diagnostics.Debug.WriteLine("ğŸ”¥ TestConnection method called!");
        
        isLoading = true;
        testResult = null;
        StateHasChanged();

        try
        {
            Console.WriteLine("ğŸ§ª Starting API connection test...");
            var success = await ApiService.TestApiConnectionAsync();
            
            testResult = new TestResult
            {
                Success = success,
                Message = success ? "API connection successful!" : "API connection failed - check if API is running on http://localhost:5260"
            };
            
            Console.WriteLine($"ğŸ§ª Test result: {testResult.Message}");
        }
        catch (Exception ex)
        {
            testResult = new TestResult
            {
                Success = false,
                Message = $"Error during test: {ex.Message}"
            };
            
            Console.WriteLine($"ğŸ§ª Test error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SimpleTest()
    {
        Console.WriteLine("ğŸ”¥ SimpleTest method called!");
        System.Diagnostics.Debug.WriteLine("ğŸ”¥ SimpleTest method called!");
        baseAddress = $"Simple test clicked at {DateTime.Now:HH:mm:ss}";
        StateHasChanged();
    }

    private class TestResult
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
    }
} 